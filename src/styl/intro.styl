//- module

iframe.video
  width: 640px
  height: 480px
  margin: 20px auto 20px auto
  border: none
  display: block

.sticky
  position: -webkit-sticky
  position: sticky
.para
  padding-bottom: 20px
  h3
    margin-top: 48px
  h2.sticky, h3.sticky
    z-index: 2
    background: #fff
    padding: 10px 10px 10px 0

.main
  & > .inner
    max-width: 1024px
    padding: 100px 0 0 60px
    margin-right: 240px
  .sticky
    top: 0
    height: 100%
    .inner
      position: absolute
      top: 0
      width: 200px
      right: 0
      height: 400px
      background: none
      color: #444
      padding: 30px
      border-left: 4px solid #c42026
      a
        display: block
