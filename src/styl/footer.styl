//- module
.foot
  img
    width: 200px
  margin-top: 20px
  padding: 30px
  border-top: 4px solid g0v-red
  background: #000
  color: #fff
  position: relative
  min-height: 220px
  overflow: hidden
  .dark-shape
    z-index: 0
    position: absolute
    width: 1000px
    height: 200%
    background: #222
    border-left: 24px solid #c42026
    top: 0
    transform: rotate(15deg)
    top: -50px
    right: -600px
    background-size: cover
    &:after
      content: " "
      display: block
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      background: rgba(0,0,0,.5)
